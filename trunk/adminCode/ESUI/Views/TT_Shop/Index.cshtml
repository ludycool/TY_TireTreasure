                            file.after(file.clone().val(""));
                            file.remove();
                        }
                        else {
                            alerts(d.Message, 5);
                        }

                    }
                })
            }

            function FileHeadSaveM() {
                //----上传头像
                var FileId = "";
                $("input[name='Details']").val("");//html带有非法字符
                $("#ff").form('submit', {
